<h1><%= @user.name %></h1>
<%= image_tag @user.profile_pic.show.url %>
<p><%= @user.country %></p>
<p><%= @user.email %></p>
<p><%= @user.twitter %></p>
<p><%= @user.website %></p>
<p><%= @user.bio %></p>

<% @user.songs.each do |song| %>
  <h3><%= song.name %></h3>
    <%= audio_tag song.file, controls: true %>
    <% song.comments.each do |comment| %>
      <p><%= comment.content %></p>
  <% end %>
<% end %>



<%= render 'songs/form' %>

<p><%= link_to 'Edit Profile', edit_user_path(@user) %> / <%= link_to 'Delete Profile', user_path(@user), method: :delete %></p>

