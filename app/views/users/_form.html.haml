= form_for(@user) do |f|

  %p
    .field
      = f.label :name 
      %br
      = f.text_field :name
  
  %p
    .field
      = f.label :email
      %br
      = f.text_field :email
    
  %p  
    .field
      = f.label :country
      %br
      = f.text_field :country
  %p  
    .field
      = f.label :bio
      %br
      = f.text_area :bio
  %p  
    .field
      = f.label :website
      %br
      = f.text_field :website
  %p  
    .field
      = f.label 'Twitter: @'
      %br
      = f.text_field :twitter
  %p
    .field
      = f.label :profile_pic
      = f.file_field :profile_pic
      %br
      %p 
        = f.label "or use a URL"
        %br
        = f.text_field :remote_profile_pic_url
  %p
    .actions
      = f.submit :class => "submit"



